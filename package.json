    "open_allure": "npx allure open ./allure-report",
    "-----": "---------------------------------------------------",
    "t002": "cross-env ENV=sit npx playwright test src/tests/UI/homePage/menuAgent.spec.ts --headed && npm run generate_allure && npm run open_allure",
